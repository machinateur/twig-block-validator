{
  "main": "bin/box",
  "directories": [
    "config", "src", "vendor"
  ],
  "files": [
    "templates/.gitignore"
  ],
  "finder": [
    {
      "name":    "*.php",
      "exclude": ["Tests/", "tests/"],
      "in":      "vendor/"
    },
    {
      "name": "*.yaml",
      "in":   "src/Resources/config"
    }
  ],
  "compression": "GZ",
  "output":      "build/twig-block-validator.phar",
  "banner-file": "LICENSE",
  "git-version": "box_release_build",
  "compactors": [
    "KevinGH\\Box\\Compactor\\Json",
    "KevinGH\\Box\\Compactor\\Php",
    "KevinGH\\Box\\Compactor\\PhpScoper"
  ],
  "php-scoper":  "scoper.inc.php"
}
